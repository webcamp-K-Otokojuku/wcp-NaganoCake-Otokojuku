<div class="col-md-6">
  <h2 class="bg-light">会員情報編集</h2>

  <%= form_with model: @customer, url: admin_customer_path(@customer.id), local: true do |f| %>
    <div class="fald">
      <table class="table">
        <tr>
          <td><p>会員ID</p></td>
          <td></td>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <td>
            <p>名前</p>
          </td>
          <td></td>
          <td class="table_form">
            <%= f.text_field :last_name %>
          </td>
          <td></td>
          <td class="table_right">
            <%= f.text_field :first_name %>
          </td>
        </tr>
        <tr>
          <td>
            <p>フリガナ</p>
          </td>
          <td></td>
          <td>
            <%= f.text_field :last_name_kana %>
          </td>
          <td class="table_kana"></td>
          <td class="table_right">
            <%= f.text_field :first_name_kana %>
          </td>
        </tr>
        <tr>
          <td>
            <p><%= f.label :postcode, "郵便番号" %></p>
          </td>
          <td></td>
          <td>
            <p><%= f.text_field :postcode, placeholder:"ハイフンなし" %></p>
          </td>
        </tr>
        <tr>
          <td>
            <p><%= f.label :address, "住所" %></p>
          </td>
          <td></td>
          <td colspan="3">
            <%= f.text_field :address, size: 55 %>
          </td>
        </tr>
        <tr>
          <td>
            <p><%= f.label :tel, "電話番号" %></p>
          </td>
          <td></td>
          <td>
            <p><%= f.text_field :tel, placeholder:"ハイフンなし" %></p>
          </td>
        </tr>
        <tr>
          <td>
            <p><%= f.label :email, "メールアドレス" %></p>
          </td>
          <td></td>
          <td>
            <%= f.email_field :email, autocomplete: "email" %>
          </td>
        </tr>
        <tr>
          <td><p>会員ステータス</p></td>
          <td></td>
          <td>
            <%= f.radio_button :is_deleted, false %> 有効
            <%= f.radio_button :is_deleted, true %> 退会
          </td>
        </tr>
        <tr>
          <td></td>
          <td></td>
          <td>
            <%= f.submit '変更を保存', class:"btn btn-success" %>
          </td>
        </tr>
      <table>
    </div>
  <% end %>


</div>
