<div class="container">
  <div class="row">
    <div class="col-md-3 text-center m-5">
      <h3 class="text-dark bg-light p-0">注文履歴詳細</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 offset-md-1">
      <table>
        <tbody>
          <tr>
            <th>購入者</th>
            <td>
              <%= link_to admin_customer_path(@order) do %>
                <%= @order.customer.last_name %> <%= @order.customer.first_name %>
              <% end %>
            </td>
            <td></td>
          </tr>

          <tr>
            <th>注文日</th>
            <td><%= @order.create_at.strftime('%Y/%m/%d') %></td>
            <td></td>
          </tr>

          <tr>
            <th>配送先</th>
            <td>〒 <%= @order.postcode %> <%= @order.address %><br /><%= @order.name %></td>
            <td></td>
          </tr>

          <tr>
            <th>支払方法</th>
            <td><%= @order.pay_way %></td>
            <td></td>
          </tr>

          <!--?-->
          <tr>
            <%= form_with (model: @order,url: admin_order_path, local: true, class: "form-row") do |f| %>
              <th>注文ステータス</th>
              <td><%= f.select :status, Order.statuses_i18n.invert, {prompt: false}, class:"form-control" %></td>
              <td><%= f.submit "更新", class: "btn btn-succes" %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-md-9">
      <table class="table border-bottom">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価 (税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th>制作ステータス</th>
          </tr>
        </thead>

        <% @order_items.each do |order_item| %>
        <tbody>
          <tr>
            <td><%= order_item.item.name %></td>
            <td><%= order_item.include_tax.to_s(:delimited) %> 円</td>
            <td><%= order_item.quantity %></td>
            <td><%= (order_item.include_tax * order_item.quantity).to_s(:delimited) %> 円</td>
            <td>
              <%= form_with model: order_item,url: admin_order_item_path(order_item), local: true do |f| %>
                <%= f.select :status, OrderItem.statuses.keys.to_a, {} %>
                <%= f.submit "更新", class: "btn btn-succes" %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>

    <div class="col-md-3">
      <p>商品合計  <%= @order.total_price.to_s(:delimited) %> 円</p>
      <p>送料  <%= @order.fee %> 円</p>
      <p>請求金額合計  <%=( @order.total_price + @order.fee ) %> 円</p>
    </div>
  </div>
</div>