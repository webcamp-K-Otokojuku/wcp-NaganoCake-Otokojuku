<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
        <%= render 'genres/index' %>
    </div>
    <div class="col-md-8 offset-md-1">
      <table>
        <thead>
          <h2>商品一覧<span>（全<%= @items.count %>件）</span></h2>
        </thead>
        <tbody>
        <% @items.each do |item| %>
          <tr>
            <td>
              <%= link_to item_path(item.id) do %>
                <%= attachment_image_tag item, :item_image, :fill, 250, 150, format: 'jpeg', fallback: "no_image.jpg" %>
              <% end %>
              <p><%= item.name %></p>
              <p>¥<%= item.price.to_s(:delimited) %></p>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>