<div class="container mt-5 px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
        <%= render 'genres/index' %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>商品一覧<span>（全<%= @items.count %>件）</span></h2>
      <div class="container">
        <div class="row">
        <% @items.each do |item| %>
          <div class="col-md-3">
            <div class="card mt-2 p-1 w-100">
              <%= link_to item_path(item.id) do %>
                <%= attachment_image_tag item, :item_image, :fill, 150, 150, format: 'jpeg', fallback: "no_image.jpg" %>
              <% end %>
              <p><%= item.name %></p>
              <p>¥<%= item.price.to_s(:delimited) %></p>
            </div>
          </div>
        <% end %>
        </div>
      </div>

      <div class="d-flex justify-content-center mt-5">
        <%= paginate @items %>
      </div>


    </div>
  </div>
</div>