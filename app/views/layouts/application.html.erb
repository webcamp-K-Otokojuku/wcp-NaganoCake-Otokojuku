<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCakeOtokojuku</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet">
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-success">
        <div class="container">
          <a class="navbar-brand" href="/"><strong>ながのCAKE</strong></a>
          <button class="navbar-toggler"
                  type="button"
                  data-toggle="collapse"
                  data-target="#navbarNavDropdown"
                  aria-controls="navbarNavDropdown"
                  aria-expanded="true"
                  aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if customer_signed_in? %>
                <li class="ml-3 my-2">
                  <%= link_to 'マイページ', customers_path, class:"text-light nav-link" %>
                </li>
                <li class="ml-3 my-2">
                  <%= link_to '商品一覧', items_path, class:"text-light nav-link" %>
                </li>
                <li class="ml-3 my-2">
                  <%= link_to 'カート', cart_items_path, class:"text-light nav-link" %>
                </li>
                <li class="ml-3 my-2">
                  <%= link_to 'ログアウト', destroy_customer_session_path, method: :delete, class:"text_light nav_link" %>
                </li>
              <% elsif admin_signed_in? %>
                <li class="ml-3my-2">
                  <%= link_to '商品一覧', admin_items_path, class:"text-light nav-link" %>
                </li>
                <li class="ml-3 my-2">
                  <%= link_to '会員一覧', admin_customers_path, class:"text-light nav-link" %>
                </li>
                <li class="ml-3 my-2">
                  <%= link_to '注文履歴一覧', admin_orders_path, class:"text-light nav-link" %>
                </li>
                <li class="ml-3">
                  <%= link_to 'ジャンル一覧', admin_genres_path, class:"text-light nav-link" %>
                </li>
                <li class="ml-3 my-2">
                  <%= link_to 'ログアウト', destroy_admin_session_path, method: :delete, class:"text-light nav-link" %>
                </li>
              <% else %>
                <li class="ml-3 my-2">
                  <%= link_to 'About', homes_about_path, class:"btn btn-light text-dark nav-link" %>
                </li>
                <li class="ml-3 my-2">
                  <%= link_to '商品一覧', items_path, class:"btn btn-light text-dark nav-link" %>
                </li>
                <li class="ml-3 my-2">
                  <%= link_to '新規登録', new_customer_registration_path, class:"btn btn-light text-dark nav-link" %>
                </li>
                <li class="ml-3 my-2">
                  <%= link_to 'ログイン', new_customer_session_path, class:"btn btn-light text-dark nav-link" %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>

    <%= yield %>
  </body>
</html>
