   <div class="container" >
     <h3><strong>注文履歴一覧</strong></h3>
      <table class="table table-bordered table-condensed" >
       <tr>
         <th>注文日</th>
         <th>配送先</th>
         <th>注文商品</th>
         <th>支払金額</th>
         <th>ステータス</th>
         <th>注文詳細</th>
       </tr>
        <% @orders.each do |order| %>
          <tr>
            <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
            <td>
              〒<%= order.postcode%></br>
              <%= order.address%></br>
              <%= order.name%>
            </td>
            <td>
              <% order.order_items.each do |order_item| %>
                <%= order_item.item.name %></br>
              <% end %>
            </td>
            <td><%= order.total_price.to_s(:delimited) %>円</td>
            <td><%= order.status %></td>
            <td><%= link_to "表示する", order_path(order), class: "btn btn-primary" %></td>
          </tr>
        <% end %>
     </table>
   </div>