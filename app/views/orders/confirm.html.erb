  <div class="container">
    <div class="row">

      <div  class="col-9">
        <table class="table table-bordered">
          <tr>
            <th>商品名</th>
            <th>単価(税込み)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
          <tr>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
          </tr>
        </table>
      </div>

      <div class="col-3">
        <table class="table table-bordered">
          <tr>
            <th>送料</th>
            <td><%= session[:order][:fee].to_s(:delimited) %>円</td>
          </tr>
          <tr>
            <th>商品合計</th>
            <td><%=  %>円</td>
          </tr>
          <tr>
            <th>請求金額</th>
            <td><%=  %>円</td>
