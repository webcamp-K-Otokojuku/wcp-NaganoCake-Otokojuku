  <div class="container">
    <div class="row">

      <div  class="col-9">
        <table class="table table-bordered">
          <tr>
            <th>商品名</th>
            <th>単価(税込み)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
          <% @cart_items.each do |cart_item| %>
          <tr>
            <td>
              <%#= attachment_image_tag cart_item.item.item_image, fallback: "no_image.jpg" , size: "60x50" %>
              <%= cart_item.item.name %>
            </td>
            <td><%= ((cart_item.item.price * 1.08).floor).to_s(:delimited) %></td>
            <td><%= cart_item.quantity %></td>
            <td><%= ((cart_item.item.price * 1.08).floor * cart_item.quantity).to_s(:delimited)  %></td>
          </tr>
          <% end %>
        </table>
      </div>

      <div class="col-3">
        <table class="table table-bordered">
          <tr>
            <th>送料</th>
            <td><%= session[:order][:fee] %></td>
          </tr>
          <tr>
            <th>商品合計</th>
            <td>
              <%= session[:order][:total_price] - session[:order][:fee] %>
            </td>
          </tr>
          <tr>
            <th>請求金額</th>
            <td><%= session[:order][:total_price].to_s(:delimited) %></td>
          </tr>
        </table>
      </div>

       <div class="col-9 billing">
         <table class="table table-borderless">
          <tr>
            <th>支払方法</th>
            <td><%= session[:order]["pay_way"] %></td>
          </tr>
          <tr>
            <th>お届け先</th>
            <td>
              <%= session[:order][:postcode] %>
              <%= session[:order][:address] %></br>
              <%= session[:order][:name] %>
            </td>
          </tr>
        </table>

        <%= form_with method:@order,url: {controller: 'orders', action: 'create'}, local:true do |f| %>
          <%= f.submit "注文を確定する" ,class: "btn btn-sm btn-primary"%>
        <% end %>
       </div>

    </div>
  </div>
