<div class="container mt-5 px-5 px-sm-0">
  <div class="row">
    <div class="col-md-2 mt-5">
        <%= render 'genres/index' %>
    </div>

    <div class="col-md-9 offset-md-1">
      <h2><%= @item %> 一覧</h2>
      <div class="container">
        <div class="row">
        <% @items.each do |item| %>
          <div class="col-md-3">
            <div class="card mt-2 p-1 w-100">
              <%= link_to item_path(item.id) do %>
                <%= attachment_image_tag item, :item_image, :fill, 170, 150, format: 'jpeg', fallback: "no_image.jpg",size: '170x150' %>
              <% end %>
              
              <% if item.status == true %>
                <p><%= item.name.truncate(10) %></p>
                <!--truncate()・・・文字を省略するメソッド-->
                <p><%= item.price.to_s(:delimited) %>円</p>
              <% else %>
                <p><%= item.name.truncate(10) %></p>
                <p class="text-danger">販売停止中</p>
              <% end %>
              
            </div>
          </div>
        <% end %>
        </div>
      </div>

      <div class="d-flex justify-content-center mt-5">
        <%= paginate @items %>
      </div>


    </div>
  </div>
</div>