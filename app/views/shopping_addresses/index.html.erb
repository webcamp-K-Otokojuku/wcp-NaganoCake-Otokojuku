<h1>配送先登録/一覧</h1>

<div>
<%= form_with model: @shoppingaddress, local: true do |f| %>

  <label>郵便番号</label>
  <%= f.text_field :postcode, placeholder: "000000" %>
  
  <label>住所</label>
  <%= f.text_field :address, size: 55, placeholder: "東京都渋谷区代々木神園町0-0" %>
  
  <label>宛名</label>
  <%= f.text_field :name, placeholder: "令和" %>

<% end %>
</div>


  <table>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
    <% @shoppingaddress.each do |shoppingaddress| %>
      <tr>
        <td><%= shoppingaddress.postcode %></td>
        <td><%= shoppingaddress.address %></td>
        <td><%= shoppingaddress.name %></td>
        <td>編集</td>
      </tr>
    <% end %>
  </table>
