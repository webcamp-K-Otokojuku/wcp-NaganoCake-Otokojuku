<div class="container mt-5 px-5 px-sm-0">
  <div class="row">
    <div class="col-md-2 mt-5">
        <%= render 'genres/index' %>
        <%= link_to 'https://www.goldsgym.jp/' do %>
         <%= image_tag('マッチョ店員.png', size:"200x200") %>
        <% end %>
    </div>

    <div class="col-md-9 offset-md-1">
        <div class="d-block col-md-10 ">
          <div id="container">
            <div id="theTarget">
              <div class="image1"></div>
              <div class="image2">
                <div class="main-visual-text pt-4 pl-3 ">
                  <p>
                    ウエディングケーキ</br>
                    注文承ります</br>
                  </p>
                </div>
              </div>
              <div class="image3">
                <div class="main-visual-text pt-4 pl-3 ">
                  <p>
                    手作りケーキ体験！</br>
                    7/1～8/31募集中!!</br>
                  </p>
                </div>
              </div>

            </div>
          </div>
        </div>

        <div class="container mt-4">
          <h2>新着商品</h2>
          <div class="row">
            <% @items.first(4).each do |item| %>
              <div class="col-md-3">
                <div class="card  mt-2 p-1 w-100">
                    <%= link_to item_path(item) do%>
                      <%= attachment_image_tag item, :item_image, :fill, 170, 150, format: 'jpeg', fallback: "no_image.jpg", size: '170x150' %>
                    <% end %>
                   <p><%= item.name.truncate(10) %></p>
                  <p><%= item.price.to_s(:delimited) %>円</p>
                </div>
              </div>
            <% end %>
          </div>
        </div>
        <p class="text-right mt-3">️<%= link_to "すべての商品を見る", items_path, class:"text-dark fas fa-arrow-circle-right" %></p>
    </div>
  </div>
</div>
