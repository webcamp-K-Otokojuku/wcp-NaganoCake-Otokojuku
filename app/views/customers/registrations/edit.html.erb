<div class="container mt-5 px-1 px-sm-0 ml-5">

  <div class="row">
    <div class="col-md-3 offset-md-1 mb-3" >
      <h3 class="bg-light text-center">会員情報編集</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-md-9">
        <%= form_with model: @customer, url: customers_update_path, id: 'edit_customer', class: 'new_customer', local: true do |f| %>
        <div class="fald">
          <table class="table table-borderless" >
            <tr>
              <td style="width: 20%">名前</td>
              <td style="width: 15%"><%= f.text_field :last_name, class: 'rounded' %></td>
              <td class="table_right" style="width: 20%"><%= f.text_field :first_name, class: 'rounded' %></td>
              <td></td>
            </tr>
            <tr>
              <td>フリガナ</td>
              <td><%= f.text_field :last_name_kana, class: 'rounded' %></td>
              <td class="table_right"><%= f.text_field :first_name_kana, class: 'rounded' %></td>
              <td></td>
            </tr>
            <tr>
              <td>郵便番号</td>
              <td><%= f.text_field :postcode, class: 'rounded' %></td>
              <td></td>
              <td></td>
            </tr>
            <tr>
              <td>住所</td>
              <td colspan="3" ><%= f.text_field :address, size: 70,class: 'rounded' %></td>
              <td></td>
              <td></td>
            </tr>
            <tr>
              <td>電話番号</td>
              <td><%= f.text_field :tel, class: 'rounded' %></td>
              <td></td>
              <td></td>
            </tr>
            <tr>
              <td>メールアドレス</td>
              <td><%= f.email_field :email, autocomplete: "email", class: 'rounded' %></td>
              <td></td>
              <td></td>
            </tr>
            <tr>
              <td></td>
              <td><%= f.submit "編集内容を保存" ,class: 'btn btn-success' %></td>
              <td></td>
              <td><%= link_to '退会する', customers_hide_path,  class: "btn btn-sm btn-danger"%></td>
            </tr>
          </table>
        </div>
        <% end %>
    </div>
  </div>

</div>




