.container.mt-5.px-1.px-sm-0
  .row
    .col-md-2.offset-md-1.mb-3
      h3.bg-light.text-center
        | マイページ
  .col-md-8
    h4.mb-4
      | 登録情報　
      = link_to '編集する', edit_customers_path, class: "btn btn-sm btn-success"
    table.table.table-bordered
      tr
      tr
        th.table-secondary[style="width: 20%"]
          | 氏名
        th
          = current_customer.last_name
          = current_customer.first_name
      tr
        th.table-secondary
          | カナ
        th
          = current_customer.last_name_kana
          = current_customer.first_name_kana
      tr
        th.table-secondary
          | 郵便番号
        th
          = current_customer.postcode
      tr
        th.table-secondary
          | 住所
        th
          = current_customer.address
      tr
        th.table-secondary
          | 電話番号
        th
          = current_customer.tel
      tr
        th.table-secondary
          | メールアドレス
        th
          = current_customer.email
    h4.mb-4.mt-4
      | 配送先　　
      = link_to '一覧を見る', shopping_addresses_path, class: "btn btn-sm btn-primary "
    h4
      | 注文履歴　
      = link_to '一覧を見る', orders_path, class: "btn btn-sm btn-primary "
